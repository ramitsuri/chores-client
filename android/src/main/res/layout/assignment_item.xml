<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Clean toilet" />

    <TextView
        android:id="@+id/textDueDateTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="2dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/textAssignedTo"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        tools:text="Due 7 Sep, 3pm" />

    <TextView
        android:id="@+id/textAssignedTo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="2dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/textRepeats"
        app:layout_constraintStart_toEndOf="@id/textDueDateTime"
        app:layout_constraintTop_toTopOf="@id/textDueDateTime"
        tools:text="Assigned to you" />

    <TextView
        android:id="@+id/textRepeats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="2dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textAssignedTo"
        app:layout_constraintTop_toTopOf="@id/textDueDateTime"
        tools:text="Repeats in 12 hours" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChangeState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textDueDateTime"
        tools:text="@string/assignment_mark_in_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>